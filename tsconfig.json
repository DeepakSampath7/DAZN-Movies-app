{
    "compilerOptions": {
        "types": ["node", "express", "jest"],
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "./",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "Node",
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": "./src",
        "paths": {
            "@src/*": ["*"],
            "@routes/*": ["routes/*"],
            "@config/*": ["config/*"],
            "@middleware/*": ["middleware/*"],
            "@models/*": ["models/*"],
            "@controllers/*": ["controllers/*"],
            "@session/*": ["session/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "index.ts"],
    "exclude": ["node_modules"]
}
